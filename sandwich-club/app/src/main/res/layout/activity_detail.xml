<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.udacity.sandwichclub.DetailActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_iv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/sandwich_picture_content_description"
                    android:scaleType="centerCrop"/>

            <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@android:color/transparent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/detail_also_known_as_label"
                    android:ems="10"
                    android:id="@+id/also_known_label" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/also_known" android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@android:color/transparent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/detail_ingredients_label"
                    android:ems="10"
                    android:id="@+id/ingredients_label" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ingredients" android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@android:color/transparent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/detail_place_of_origin_label"
                    android:ems="10"
                    android:id="@+id/origin_label" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/origin" android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

            <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="@android:color/transparent"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/detail_description_label"
                    android:ems="10"
                    android:id="@+id/description_label" android:textStyle="bold"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/description" android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
